<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
  odl:use-default-for-reference-types="true">

  <reference id="dataBroker" interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"/>

  <bean id="iotdmPluginManagerService"
        class="org.opendaylight.iotdm.plugininfra.pluginmanager.IotdmPluginManagerProvider"
        factory-method="getInstance">
  </bean>
  <odl:rpc-implementation ref="iotdmPluginManagerService" />

  <bean id="iotdmPluginRegistrationService"
        class="org.opendaylight.iotdm.plugininfra.pluginmanager.IotdmPluginManager"
        factory-method="getInstance">
  </bean>
  <service ref="iotdmPluginRegistrationService" interface="org.opendaylight.iotdm.plugininfra.pluginmanager.api.plugins.IotdmPluginRegistrationService" />

  <bean id="iotdmChannelProviderRegistrationService"
        class="org.opendaylight.iotdm.plugininfra.pluginmanager.IotdmPluginManager"
        factory-method="getInstance">
  </bean>
  <service ref="iotdmChannelProviderRegistrationService" interface="org.opendaylight.iotdm.plugininfra.pluginmanager.api.channels.IotdmChannelProviderRegistrationService" />

  <bean id="iotdmCustomServicesService"
        class="org.opendaylight.iotdm.plugininfra.pluginmanager.customservices.PluginManagerCustomServicesService"
        factory-method="getInstance">
  </bean>
  <service ref="iotdmCustomServicesService" interface="org.opendaylight.iotdm.plugininfra.pluginmanager.api.services.IotdmPluginManagerCustomServicesService" />

  <bean id="iotdmSimpleConfigService"
        class="org.opendaylight.iotdm.plugininfra.pluginmanager.simpleconfig.IotdmPluginsSimpleConfigProvider">
    <argument ref="dataBroker" />
  </bean>
  <odl:rpc-implementation ref="iotdmSimpleConfigService" />
</blueprint>
